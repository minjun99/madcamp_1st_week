<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullImage"
    android:background="@color/backgroundcolor">>

    <ImageView
        android:id="@+id/fullImage_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/grid"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundcorner_coloraccent"/>

    <TextView
        android:textSize="10sp"
        android:id="@+id/fullImageText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fullImage_id"
        android:layout_marginTop="-25dp"
        android:background="@drawable/roundcorner_colorprimary_bottom"/>

</RelativeLayout>